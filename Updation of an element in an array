//Updation of an element in an array
import java.util.*;
public class Main
{
	public static void main(String[] args) {
	int arr[] = new int []{18, 30, 15, 70, 12};
	int x=2, value =45;
	for(int i=0,k=0;i<arr.length;i++){
	    if(i==x){
	        arr[i]=value;
	    }
	}
	System.out.println(Arrays.toString(arr));
	}
}
